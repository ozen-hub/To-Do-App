<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="context" prefHeight="416.0" prefWidth="436.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.devstack.app.controllers.RegisterFormController">
   <children>
      <Label layoutX="150.0" layoutY="20.0" text="Register here">
         <font>
            <Font name="System Bold" size="22.0" />
         </font>
      </Label>
      <TextField fx:id="txtFullName" layoutX="14.0" layoutY="84.0" prefHeight="40.0" prefWidth="408.0" promptText="Full Name">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </TextField>
      <TextField fx:id="txtUsername" layoutX="15.0" layoutY="140.0" prefHeight="40.0" prefWidth="408.0" promptText="email / username">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </TextField>
      <PasswordField fx:id="txtPassword" layoutX="15.0" layoutY="197.0" prefHeight="40.0" prefWidth="408.0" promptText="Password">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </PasswordField>
      <Button layoutX="15.0" layoutY="260.0" mnemonicParsing="false" onAction="#btnRegisterOnAction" prefHeight="40.0" prefWidth="408.0" style="-fx-background-color: #3498db;" text="Register" textFill="WHITE">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Label layoutX="211.0" layoutY="323.0" text="OR" />
      <Button layoutX="14.0" layoutY="358.0" mnemonicParsing="false" onAction="#btnAlreadyHaveAnAccount" prefHeight="40.0" prefWidth="408.0" style="-fx-background-color: #16a085;" text="Already have an account" textFill="WHITE">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
   </children>
</AnchorPane>
